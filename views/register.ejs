<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register - My Drive</title>
  <!-- setup tailwind -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <!-- setup flowbite -->
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .glass-effect {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    
    .fade-in {
      animation: fadeIn 0.6s ease-in;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* Mobile responsive styles */
    @media (max-width: 480px) {
      .glass-effect {
        padding: 1.5rem;
        border-radius: 1.5rem;
      }
      
      .btn-primary {
        padding: 0.75rem 1.5rem;
        font-size: 0.875rem;
      }
    }
  </style>
</head>

<body class="min-h-screen flex items-center justify-center p-4">
  <div class="glass-effect rounded-2xl sm:rounded-3xl shadow-2xl p-6 sm:p-8 w-full max-w-md fade-in">
    <!-- Header -->
    <div class="text-center mb-6 sm:mb-8">
      <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl sm:rounded-2xl flex items-center justify-center mx-auto mb-3 sm:mb-4">
        <i class="ri-user-add-line text-white text-xl sm:text-2xl"></i>
      </div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-1 sm:mb-2">Create Account</h1>
      <p class="text-gray-600 text-sm sm:text-base">Join myDrive and start storing your files</p>
    </div>

    <form action="/user/register" method="post" class="space-y-4 sm:space-y-6">
      <div>
        <label for="username" class="block mb-2 text-sm font-semibold text-gray-700">Username</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="ri-user-line text-gray-400"></i>
          </div>
          <input type="text" id="username"
            class="bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent block w-full pl-10 p-2.5 sm:p-3 transition-all"
            placeholder="Choose a username" name="username" required />
        </div>
      </div>

      <div>
        <label for="email" class="block mb-2 text-sm font-semibold text-gray-700">Email Address</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="ri-mail-line text-gray-400"></i>
          </div>
          <input type="email" id="email"
            class="bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent block w-full pl-10 p-2.5 sm:p-3 transition-all"
            placeholder="Enter your email" name="email" required />
        </div>
      </div>

      <div>
        <label for="password" class="block mb-2 text-sm font-semibold text-gray-700">Password</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i class="ri-lock-line text-gray-400"></i>
          </div>
          <input type="password" id="password"
            class="bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent block w-full pl-10 p-2.5 sm:p-3 transition-all"
            placeholder="Create a password" name="password" required />
        </div>
      </div>

      <button type="submit"
        class="btn-primary w-full text-white font-semibold py-2.5 px-4 sm:py-3 sm:px-6 rounded-xl border-0 shadow-lg text-sm sm:text-base">
        <i class="ri-user-add-line mr-2"></i>
        Create Account
      </button>
    </form>

    <!-- Login link -->
    <div class="mt-4 sm:mt-6 text-center">
      <p class="text-sm text-gray-600">
        Already have an account? 
        <a href="/user/login" class="text-blue-600 hover:text-blue-800 font-semibold transition-colors">Sign In</a>
      </p>
    </div>
  </div>


  <!-- setup flowbite -->
  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
</body>

</html>